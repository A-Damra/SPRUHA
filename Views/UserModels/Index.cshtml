<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous">
    </script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/login.css">
    <title>LogIn</title>
</head>

<body>

    <div class="head-images d-flex justify-content-center">
        <img src="/images/Screenshot 2024-10-29 153249.png" alt="">
        <img src="/images/Screenshot 2024-10-29 153300.png" alt="">
    </div>
    <div class="container">
        <div class="row">
            <!-- Left side column -->
            <div class="col d-flex flex-column justify-content-center text-center"
                 style="background-color: rgb(98, 89, 202);border-top-left-radius: 10px; border-bottom-left-radius: 10px;">
                <div class="row">
                    <div class="col">
                        <img style="margin-top: -10px;"
                             src="/images/Screenshot 2024-10-29 081602.png" alt="">
                        <p class="logo-text">SPRUHA</p>
                    </div>
                </div>
                <div class1="row">
                    <div class="col">
                        <img style="margin-top: 24px;"
                             src="/images/Screenshot 2024-10-29 081459.png" alt="">
                        <p class="create-header">Create Your Account</p>
                        <p class="signup-subtext">
                            Signup to create, discover and connect with the global community
                        </p>
                    </div>
                </div>
            </div>
            <!-- Right side column -->

            <div class="col-7" ng-app="signInForm"
                 style="background-color: white; border-top-right-radius: 10px; border-bottom-right-radius: 10px;">
                <form action="#" name="signInForm">
                    <div class="signin-form">
                        <p class="signin-header">Signin to Your Account</p>
                        <p class="signup-subtext">Signin to create, discover and connect with the global community</p>

                        <div class="email-container">
                            <label class="signin-label" for="email">Email</label>
                            <input class="singin-input" type="email" name="email" placeholder="Enter your email" required>
                            <img class="email-logo"
                                 src="/images/Screenshot 2024-10-29 153230.png" alt="">

                        </div>

                        <div class="password-container">
                            <label class="signin-label" for="password">Password</label>
                            <input id="signin-password" class="singin-input" type="password" name="password"
                                   placeholder="Enter your password" required>

                            <img id="password-image" class="password-eye"
                                 src="/images/eye-slash.svg">
                            <img class="password-logo"
                                 src="/images/Screenshot 2024-10-29 154143.png">
                            <button class="signin-btn" type="submit">Sign In</button>

                            <a class="signin-form-link" href="#">Forgot password?</a>
                            <p>Don't have an account? <a class="signin-form-link" href="#">Register Here</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        $(".password-eye").click(function () {
            let passwordInput = $("#signin-password");
            let inputType = passwordInput.attr('type');

            if (inputType == "password") {
                passwordInput.attr('type', 'text');
                $("#password-image").attr('src', '/images/eye.svg');
            } else {
                passwordInput.attr('type', 'password');
                $("#password-image").attr('src', '/images/eye-slash.svg');
            }
        });
    </script>
</body>

</html>