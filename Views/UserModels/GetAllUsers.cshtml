@model IEnumerable<SPRUHA.Models.User>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/mainStyle.css">
    <script src="/js/navInclude.js"></script>
    <title>Main</title>
</head>

<body>
    <div ng-app="nav" ng-include="'/html/topNav.html'"></div>

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="bg-primary mt-5 text-white text-center rounded-3 p-2">
                    <h3 class="display-6">Welcome!</h3>
                    <p class="lead">You have been approved for a $500 loan. Click here to accept.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <div class="card mt-3 p-2 rounded-4">
                    <div class="card-body">
                        <h5 class="card-title">TOTAL REVENUE</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Previous month vs this months</h6>
                        <p><strong>$5,900.00</strong></p>
                        <p class="text-success">55% <span class="text-muted">Higher</span></p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mt-3 p-2 rounded-4">
                    <div class="card-body">
                        <h5 class="card-title">NEW EMPLOYEES</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Employees joined this month</h6>
                        <p><strong>15</strong></p>
                        <p class="text-success">5% <span class="text-muted">Higher</span></p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mt-3 p-2 rounded-4">
                    <div class="card-body">
                        <h5 class="card-title">TOTAL EXPENSES</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Previous month vs this months</h6>
                        <p><strong>$8,500.00</strong></p>
                        <p class="text-danger">12% <span class="text-muted">Higher</span></p>
                    </div>
                </div>
            </div>
        </div>

        <!--User Data Table-->
        <div class="row mt-5">
            <div class="col bg-white p-3 rounded-4">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th scope="col">NAME</th>
                            <th scope="col">MOBILE</th>
                            <th scope="col">PASSWORD</th>
                        </tr>
                    </thead>
                    <tbody>
                         @foreach (var user in Model) 
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                         <img src=@user.Photo class="rounded-circle me-2"> 
                                        <div>
                                             <p class="mb-0">@user.Name</p> 
                                             <p class="text-muted mb-0" style="font-size:12px;">@user.Email</p> 
                                        </div>
                                    </div>
                                </td>
                                <td>
                                     <p>@user.Mobile</p> 
                                </td>
                                <td>
                                    <p>
                                         @user.Password 
                                    </p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>