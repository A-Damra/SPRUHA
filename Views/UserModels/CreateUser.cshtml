 @model SPRUHA.Models.User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.7.1.js"
            integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/addUserStyle.css">
    <script src="/js/navInclude.js"></script>
    <title>Add User</title>
</head>

<body>
    <div ng-app="nav" ng-include="'/html/topNav.html'"></div>

    <form asp-controller="UserModels" asp-action="CreateUser" method="post" enctype="multipart/form-data">
        <div class="container-fluid form-cont">
            <div class="row">
                <div class="col">
                    <label>Name</label>
                    <input class="form-input" name="Name" type="text" placeholder="Name" required>
                </div>
                <div class="col">
                    <label>Email</label>
                    <input class="form-input" name="Email" type="email" placeholder="Email" required>
                </div>
                <div class="col">
                    <label>Mobile Number</label>
                    <input class="form-input" name="Mobile" type="number" placeholder="Mobile Number" required>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <label>Password</label>
                    <input class="form-input" name="Password" type="password" placeholder="Password" required>
                </div>
                <div class="col">
                    <label>Photo</label>
                    <input class="form-input" type="file" name="Photo" required>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-4">
                    <button class="signin-btn" type="submit">Add User</button>
                </div>
            </div>
        </div>
    </form>
</body>

</html>
